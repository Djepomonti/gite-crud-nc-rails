


<div class="flexcontainer">
<div class="cardsdisplay">
        <% @rooms.each do |room| %>
                    <figure>
                        <%= link_to room_path(room) do %>
                        <div class="media">
                            <%= image_tag(room.photo) %>
                        </div>
                            <figcaption>
                                <svg viewBox="0 0 200 200" version="1.1" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
                                    <defs>
                                        <mask id="mask" x="0" y="0" width="100%" height="100%">
                                            <rect id="alpha" x="0" y="0" width="100%" height="100%"></rect>
                                            <text class="title" dx="50%" dy="2.5em">GITES</text>
                                            <text class="title" dx="50%" dy="3.5em">NOUVELLE</text>
                                            <text class="title" dx="50%" dy="4.5em">CALEDONIE</text>
                                        </mask>
                                    </defs>
                                        <rect id="base" x="0" y="0" width="100%" height="100%"></rect>
                                </svg>
                                    <div class="body">
                                        <h6><%= room.name %></h6>
                                           <p><%= room.description %></p>
                                    </div>
                            </figcaption>
                            <div class="btn-prix"> <h6>5000</h6><p>xpf</p><h6>/</h6><h6>Nuit</h6><p>(en semaine)</p></div>
                            <div class="btn-prix2"> <h6>7000</h6><p>xpf</p><h6>/</h6><h6>Nuit</h6><p>(en week-end)</p></div>
                            </figure>
          <% end %>
          <% end %>

</div>
<div class="displayinfo">
<div class="carteinfo">
<div class="blocblanc">
<h1>Bienvenue sur les <br>
    Gîtes de <br>
    Nouvelle-Calédonie</h1>
    <div class="line"><i class="fa-solid fa-bed"></i>  <h4>Sélectionnez votre chambre</h4></div>
    <div class="line"><i class="fa-solid fa-book"></i><h4>Réservez</h4></div>
    <div class="line"><i class="fa-solid fa-umbrella-beach"></i><h4>Profitez</h4></div>
    </div>
</div>
</div>
</div>
